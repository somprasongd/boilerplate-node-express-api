{
  "name": "boilerplate-node-express-api",
  "version": "1.0.0",
  "description": "Boilerplate APIs with express",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.js --exec babel-node -e js",
    "clean": "rm -rf dist",
    "build": "npm run clean && mkdir dist && babel src -s -d dist --copy-files",
    "prod": "export NODE_ENV=production||set NODE_ENV=production&&npm run build&&node dist/index.js",
    "start": "node dist/index.js",
    "lint": "eslint src/ --fix"
  },
  "keywords": [],
  "author": "Somprasong Damyos",
  "repository": {
    "type": "git",
    "url": "https://github.com/somprasongd/boilerplate-node-express-api.git"
  },
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "config": "^1.30.0",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-async-errors": "^3.0.0",
    "express-graceful-shutdown": "^1.0.0",
    "handle-promise": "^1.0.0",
    "helmet": "^3.12.1",
    "joi": "^13.4.0",
    "joi-objectid": "^2.0.0",
    "jsonwebtoken": "^8.3.0",
    "moment": "^2.22.2",
    "morgan": "^1.9.0",
    "rotating-file-stream": "^1.4.0",
    "swagger-ui-express": "^3.0.10",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^5.1.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.6.2",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.7"
  }
}
